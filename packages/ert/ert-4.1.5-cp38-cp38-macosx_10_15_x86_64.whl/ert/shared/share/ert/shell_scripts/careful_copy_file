#!/usr/bin/env python
import sys

from ert._c_wrappers.fm.shell import careful_copy_file

if __name__ == "__main__":
    src = sys.argv[1]
    try:
        if len(sys.argv) > 2:
            target = sys.argv[2]
            careful_copy_file(src, target)
        else:
            careful_copy_file(src)
    except IOError as e:
        sys.exit(f"CAREFUL_COPY_FILE failed with the following error: {e}")
