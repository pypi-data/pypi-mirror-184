#!/bin/bash

if [ "$#" -ne 1 ] ; then
	echo "Usage: gs_submit <config-file>"
	exit 1
fi


tmpfile=$(mktemp /tmp/slurm_job.XXXXXX)
echo "Creating job file: $tmpfile"
python3 -m globalsearch.control.gs_prepare $1 && python3 -m globalsearch.rnaseq.make_star_salmon_job $1 > $tmpfile && python3 -m globalsearch.control.gs_submit $tmpfile $1

#rm -f $tmpfile
